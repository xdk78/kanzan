{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "."
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["test/**/*"]
}
